    "eslint": "9.14.0",
    "eslint-plugin-nimbus-clean": "2.0.1",
    "eslint-plugin-react-hooks": "5.1.0",
    "eslint-plugin-react-refresh": "0.4.18",
    "globals": "15.14.0",
    "postcss": "8.4.49",
